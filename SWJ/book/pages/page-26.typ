#import "../template.typ": somatic_page

#somatic_page(
  title: "Ritual: The Fear Dialogue",
  body_text: [
    This ritual transforms your relationship with fear from adversary to ally.
    
    #v(0.5cm)
    
    #rect(stroke: 0.5pt + rgb("#D4AF37"), inset: 20pt, width: 100%)[
      #align(center)[*The Fear Dialogue*]
      
      1.  *Find a quiet space.* Place your hand on the part of your body where fear lives most strongly.
      
      2.  *Greet your fear.* Say aloud: "Hello, Fear. I see you."
      
      3.  *Ask it questions:*
          - "What are you trying to protect me from?"
          - "How long have you been here?"
          - "What do you need from me?"
      
      4.  *Listen.* Write down anything that arisesâ€”images, memories, sensations.
      
      5.  *Thank it.* Say: "Thank you for protecting me. I am taking it from here."
      
      #align(center)[
        _"I honor your vigilance.
        I release your grip.
        We walk forward together."_
      ]
    ]
    
    #v(0.5cm)
    *Date of Dialogue:* #line(length: 40%, stroke: 0.5pt + gray)
  ],
  image_path: none,
  layout_style: "bottom"
)
